/*
-------------------------------------------------------------------
Full ETL script for quality checks & transformation
-------------------------------------------------------------------
Script Purpose:
       This scripts performs quality checks for consistency, 
      accuracy & standarddization,. It inclused check for:
-Null & Duplicate in primary keys
-Unwanted spaces in string columns
-Data standardization & Normalization to acheive consistency
-Invalid dates
-Data consistency between related fields

-------------------------------------------------------------------
*/

--CLEAN & LOAD bronze.crm_cust_info to silver.crm_cust_info
--Before loading data from the bronze tables to the silver tables:

--Check for Duplicates or NULL in the primary key 

SELECT cst_id,
COUNT(*) 
FROM [Bronze].[crm_cust_info]
GROUP BY cst_id
HAVING COUNT(*)  > 1 OR cst_id IS NULL

--Remove duplicates

SELECT * FROM 
(SELECT *,
ROW_NUMBER() OVER (PARTITION BY cst_id ORDER BY cst_create_date DESC) AS flag_duplicate
FROM [Bronze].[crm_cust_info]
WHERE cst_id IS NOT NULL)t
WHERE flag_duplicate = 1

--Check for and remove unwanted spaces in the string values

SELECT cst_id,
cst_key,
TRIM(cst_firstname) AS cst_firstname,
TRIM(cst_lastname) cst_lastname,
cst_marital_status,
cst_gndr,
cst_create_date 
FROM 
(SELECT *,
ROW_NUMBER() OVER (PARTITION BY cst_id ORDER BY cst_create_date DESC) AS flag_duplicate
FROM [Bronze].[crm_cust_info]
WHERE cst_id IS NOT NULL)t
WHERE flag_duplicate = 1

--Data standardization & consistency
--Changing marital status & gender to full form

SELECT cst_id,
cst_key,
TRIM(cst_firstname) AS cst_firstname,
TRIM(cst_lastname) cst_lastname,
CASE WHEN cst_marital_status = 'M' THEN 'Married'
     WHEN cst_marital_status = 'S' THEN 'Single'
ELSE 'n/a'
END cst_marital_status,
CASE WHEN cst_gndr = 'M' THEN 'Male'
     WHEN cst_gndr = 'F' THEN 'Female'
ELSE 'n/a'
END cst_gndr,
cst_create_date 
FROM 
(SELECT *,
ROW_NUMBER() OVER (PARTITION BY cst_id ORDER BY cst_create_date DESC) AS flag_duplicate
FROM [Bronze].[crm_cust_info]
WHERE cst_id IS NOT NULL)t
WHERE flag_duplicate = 1


--Load cleaned data to the silver.crm_cust_info table

TRUNCATE TABLE silver.crm_cust_info;
INSERT INTO silver.crm_cust_info
(cst_id,
cst_key,
cst_firstname,
cst_lastname,
cst_marital_status,
cst_gndr,
cst_create_date
)
SELECT cst_id,
cst_key,
TRIM(cst_firstname) AS cst_firstname,
TRIM(cst_lastname) cst_lastname,
CASE WHEN cst_marital_status = 'M' THEN 'Married'
     WHEN cst_marital_status = 'S' THEN 'Single'
ELSE 'n/a'
END cst_marital_status,
CASE WHEN cst_gndr = 'M' THEN 'Male'
     WHEN cst_gndr = 'F' THEN 'Female'
ELSE 'n/a'
END cst_gndr,
cst_create_date 
FROM 
(SELECT *,
ROW_NUMBER() OVER (PARTITION BY cst_id ORDER BY cst_create_date DESC) AS flag_duplicate
FROM [Bronze].[crm_cust_info]
WHERE cst_id IS NOT NULL)t
WHERE flag_duplicate = 1


--Clean & Load data from the Bronze.crm_prd_info to silver.crm_prd_info
--Check for Nulls or Duplicates in the primary key and remove

SELECT prd_id, 
COUNT(*)
FROM [Bronze].[crm_prd_info]
GROUP BY prd_id
HAVING COUNT(*) > 1 OR prd_id IS NULL

--divide the prd_key into category ID and product key to be able to join the Bronze.erp_px_cat_g1v2 on cat_id and Bronze.crm_sales_details on prd_key

SELECT prd_id,
prd_key,
REPLACE(SUBSTRING(prd_key, 1, 5), '-', '_') AS cat_id,
SUBSTRING(prd_key, 7, LEN(prd_key)) AS prd_key,
prd_nm,
prd_cost,
prd_line,
prd_start_dt,
prd_end_dt
FROM [Bronze].[crm_prd_info]


--Check for unwanted space in the prod_nm column

SELECT prd_nm 
FROM [Bronze].[crm_prd_info]
WHERE prd_nm != TRIM(prd_nm)

--Check for the prd_cost column for NULLS or Negative Numbers

SELECT prd_cost 
FROM [Bronze].[crm_prd_info]
WHERE prd_cost < 0 OR prd_cost IS NULL

--Replace the Null values with 0

SELECT prd_id,
REPLACE(SUBSTRING(prd_key, 1, 5), '-', '_') AS cat_id,
SUBSTRING(prd_key, 7, LEN(prd_key)) AS prd_key,
prd_nm,
COALESCE(prd_cost, 0) AS prd_cost,
prd_line,
prd_start_dt,
prd_end_dt
FROM [Bronze].[crm_prd_info]

--Data standardization & consistency
--Replacing the prd_line abbreviations with the full form

SELECT prd_id,
REPLACE(SUBSTRING(prd_key, 1, 5), '-', '_') AS cat_id,
SUBSTRING(prd_key, 7, LEN(prd_key)) AS prd_key,
prd_nm,
COALESCE(prd_cost, 0) AS prd_cost,
CASE WHEN prd_line = 'M' THEN 'Mountain'
     WHEN prd_line = 'R' THEN 'Road'
	 WHEN prd_line = 'S' THEN 'Other Sales'
	 WHEN prd_line = 'T' THEN  'Touring'
	 ELSE 'n/a'
	 END prd_line,
prd_start_dt,
prd_end_dt
FROM [Bronze].[crm_prd_info]

--Standardize prd_start_dt & prd_end_dt to make the end date to be later than the start date
--Source data shows that the end date is earlier than the start date

SELECT prd_id,
REPLACE(SUBSTRING(prd_key, 1, 5), '-', '_') AS cat_id,
SUBSTRING(prd_key, 7, LEN(prd_key)) AS prd_key,
prd_nm,
COALESCE(prd_cost, 0) AS prd_cost,
CASE WHEN prd_line = 'M' THEN 'Mountain'
     WHEN prd_line = 'R' THEN 'Road'
	 WHEN prd_line = 'S' THEN 'Other Sales'
	 WHEN prd_line = 'T' THEN  'Touring'
	 ELSE 'n/a'
	 END prd_line,
prd_start_dt,
LEAD(prd_start_dt) OVER (PARTITION BY prd_key ORDER BY prd_start_dt)-1 AS prd_end_dt
FROM [Bronze].[crm_prd_info]

--Convert the date columns from DATETIME to DATE since there is no record of time

SELECT prd_id,
REPLACE(SUBSTRING(prd_key, 1, 5), '-', '_') AS cat_id,
SUBSTRING(prd_key, 7, LEN(prd_key)) AS prd_key,
prd_nm,
COALESCE(prd_cost, 0) AS prd_cost,
CASE WHEN prd_line = 'M' THEN 'Mountain'
     WHEN prd_line = 'R' THEN 'Road'
	 WHEN prd_line = 'S' THEN 'Other Sales'
	 WHEN prd_line = 'T' THEN  'Touring'
	 ELSE 'n/a'
	 END prd_line,
CAST(prd_start_dt AS DATE),
CAST(LEAD(prd_start_dt) OVER (PARTITION BY prd_key ORDER BY prd_start_dt)-1 AS DATE) AS prd_end_dt
FROM [Bronze].[crm_prd_info]


--Load cleaned data into the silver.crm_prd_info table

TRUNCATE TABLE silver.crm_prd_info;
INSERT INTO silver.crm_prd_info
(prd_id,
cat_id,
prd_key,
prd_nm,
prd_cost,
prd_line,
prd_start_dt,
prd_end_dt
)
SELECT prd_id,
REPLACE(SUBSTRING(prd_key, 1, 5), '-', '_') AS cat_id,
SUBSTRING(prd_key, 7, LEN(prd_key)) AS prd_key,
prd_nm,
COALESCE(prd_cost, 0) AS prd_cost,
CASE WHEN prd_line = 'M' THEN 'Mountain'
     WHEN prd_line = 'R' THEN 'Road'
	 WHEN prd_line = 'S' THEN 'Other Sales'
	 WHEN prd_line = 'T' THEN  'Touring'
	 ELSE 'n/a'
	 END prd_line,
CAST(prd_start_dt AS DATE),
CAST(LEAD(prd_start_dt) OVER (PARTITION BY prd_key ORDER BY prd_start_dt)-1 AS DATE) AS prd_end_dt
FROM [Bronze].[crm_prd_info];



----Clean & Load data from the Bronze.crm_sales_details to silver.crm_sales_details
--Check for the validity of the date colums

SELECT 
sls_order_dt 
FROM [Bronze].[crm_sales_details]
WHERE sls_order_dt <=0 OR LEN(sls_order_dt) != 8

--Cast the date columns from interger to DATE
--Check for dates that are 0 and convert them to NULL
--Check for incomplete date is based on the length 

SELECT 
sls_ord_num,
sls_prd_key,
sls_cust_id,
CASE WHEN sls_order_dt = 0 OR LEN(sls_order_dt) != 8 THEN NULL
     ELSE CAST(CAST(sls_order_dt AS VARCHAR) AS DATE)
	 END sls_order_dt,
sls_ship_dt,
sls_due_dt,
sls_sales,
sls_quantity,
sls_price
FROM [Bronze].[crm_sales_details]

--Apply the same rules to the ship & due dates

SELECT 
sls_ord_num,
sls_prd_key,
sls_cust_id,
CASE WHEN sls_order_dt = 0 OR LEN(sls_order_dt) != 8 THEN NULL
     ELSE CAST(CAST(sls_order_dt AS VARCHAR) AS DATE)
	 END sls_order_dt,
CASE WHEN sls_ship_dt = 0 OR LEN(sls_ship_dt) != 8 THEN NULL
     ELSE CAST(CAST(sls_ship_dt AS VARCHAR) AS DATE)
	 END sls_ship_dt,
CASE WHEN sls_due_dt = 0 OR LEN(sls_due_dt) != 8 THEN NULL
     ELSE CAST(CAST(sls_due_dt AS VARCHAR) AS DATE)
	 END sls_due_dt,
sls_sales,
sls_quantity,
sls_price
FROM [Bronze].[crm_sales_details]


--Check for data consistency bewteen Sales, Quantity & Price columns
--Sales must be Quantity * Price
--Must not be NULL, 0 or negative

SELECT 
sls_sales,
sls_quantity,
sls_price
FROM [Bronze].[crm_sales_details]
WHERE sls_sales != sls_quantity * sls_price OR sls_sales IS NULL OR sls_quantity IS NULL OR sls_price IS NULL
OR sls_sales <= 0 OR sls_quantity <= 0 OR sls_price <= 0

--Condition to clean Sales, Quantity & Price columns
--If Sales is negative, NULL or 0, derive it using qauntity and price
--If Price is NULL or 0, calculate using sales & quantity
--If Price is negative, convert to positive value

SELECT 
sls_ord_num,
sls_prd_key,
sls_cust_id,
CASE WHEN sls_order_dt = 0 OR LEN(sls_order_dt) != 8 THEN NULL
     ELSE CAST(CAST(sls_order_dt AS VARCHAR) AS DATE)
	 END sls_order_dt,
CASE WHEN sls_ship_dt = 0 OR LEN(sls_ship_dt) != 8 THEN NULL
     ELSE CAST(CAST(sls_ship_dt AS VARCHAR) AS DATE)
	 END sls_ship_dt,
CASE WHEN sls_due_dt = 0 OR LEN(sls_due_dt) != 8 THEN NULL
     ELSE CAST(CAST(sls_due_dt AS VARCHAR) AS DATE)
	 END sls_due_dt,
CASE WHEN sls_sales <= 0 OR sls_sales IS NULL OR sls_sales != sls_quantity * ABS(sls_price)
     THEN sls_quantity * ABS(sls_price)
	 ELSE sls_sales
	 END sls_sales,
sls_quantity,
CASE WHEN sls_price <= 0 OR sls_price IS NULL
     THEN sls_sales/NULLIF(sls_quantity, 0)
	 ELSE sls_price
	 END sls_price
FROM [Bronze].[crm_sales_details]

--Load clean data into the silver.crm_sales_details table

TRUNCATE TABLE silver.crm_sales_details;
INSERT INTO silver.crm_sales_details
(sls_ord_num,
sls_prd_key,
sls_cust_id,
sls_order_dt,
sls_ship_dt,
sls_due_dt,
sls_sales,
sls_quantity,
sls_price
)
SELECT 
sls_ord_num,
sls_prd_key,
sls_cust_id,
CASE WHEN sls_order_dt = 0 OR LEN(sls_order_dt) != 8 THEN NULL
     ELSE CAST(CAST(sls_order_dt AS VARCHAR) AS DATE)
	 END sls_order_dt,
CASE WHEN sls_ship_dt = 0 OR LEN(sls_ship_dt) != 8 THEN NULL
     ELSE CAST(CAST(sls_ship_dt AS VARCHAR) AS DATE)
	 END sls_ship_dt,
CASE WHEN sls_due_dt = 0 OR LEN(sls_due_dt) != 8 THEN NULL
     ELSE CAST(CAST(sls_due_dt AS VARCHAR) AS DATE)
	 END sls_due_dt,
CASE WHEN sls_sales <= 0 OR sls_sales IS NULL OR sls_sales != sls_quantity * ABS(sls_price)
     THEN sls_quantity * ABS(sls_price)
	 ELSE sls_sales
	 END sls_sales,
sls_quantity,
CASE WHEN sls_price <= 0 OR sls_price IS NULL
     THEN sls_sales/NULLIF(sls_quantity, 0)
	 ELSE sls_price
	 END sls_price
FROM [Bronze].[crm_sales_details];




----Clean & Load data from the Bronze.erp_cust_az12 to silver.erp_cust_az12
--Check for consistency of the cid column with the cust_key column on the crm_cust_info table
--Remove the NAS prefix from the cid to column to be consistent with the cust_key column on the crm_cust_info table

SELECT 
CASE WHEN cid LIKE 'NAS%' THEN SUBSTRING(cid, 4, LEN(cid))
     ELSE cid
	 END cid,
bdate,
gen
FROM [Bronze].[erp_cust_az12]

--Validate bdate column to see if there future birthdays

SELECT * 
FROM [Bronze].[erp_cust_az12]
WHERE bdate > GETDATE()

--Change future bdate to NULL

SELECT 
CASE WHEN cid LIKE 'NAS%' THEN SUBSTRING(cid, 4, LEN(cid))
     ELSE cid
	 END cid,
bdate,
CASE WHEN bdate > GETDATE() THEN NULL 
     ELSE bdate
	 END bdate,
gen
FROM [Bronze].[erp_cust_az12]

--Check for data consistency in the gender column

SELECT DISTINCT gen
FROM [Bronze].[erp_cust_az12]


--Standardize the gender column 

SELECT 
CASE WHEN cid LIKE 'NAS%' THEN SUBSTRING(cid, 4, LEN(cid))
     ELSE cid
	 END cid,
CASE WHEN bdate > GETDATE() THEN NULL 
     ELSE bdate
	 END bdate,
CASE WHEN gen = 'F' THEN 'Female'
     WHEN gen = 'M' THEN 'Male'
	 WHEN gen = '' THEN 'n/a'
	 WHEN gen IS NULL THEN 'n/a'
	 ELSE gen
	 END gen
FROM [Bronze].[erp_cust_az12]

--Load cleaned data into the silver.erp_cust_az12 table

TRUNCATE TABLE silver.erp_cust_az12;
INSERT INTO silver.erp_cust_az12 
(
 cid,
 bdate,
 gen
)
SELECT 
CASE WHEN cid LIKE 'NAS%' THEN SUBSTRING(cid, 4, LEN(cid))
     ELSE cid
	 END cid,
CASE WHEN bdate > GETDATE() THEN NULL 
     ELSE bdate
	 END bdate,
CASE WHEN gen = 'F' THEN 'Female'
     WHEN gen = 'M' THEN 'Male'
	 WHEN gen = '' THEN 'n/a'
	 WHEN gen IS NULL THEN 'n/a'
	 ELSE gen
	 END gen
FROM [Bronze].[erp_cust_az12]


----Clean & Load data from the Bronze.erp_loc_a101 to silver.erp_loc_a101
--Check for consistency of the cid column with the cust_key column on the crm_cust_info table
--Replace the "-" in the cid column with nothing to be consistent with the cust_key column on the crm_cust_info table

SELECT 
REPLACE(cid, '-', '') AS cid,
cntry
FROM [Bronze].[erp_loc_a101]


--Check for consistency in the country column 
SELECT DISTINCT cntry
FROM [Bronze].[erp_loc_a101]

--Standarduze country names

SELECT 
REPLACE(cid, '-', '') AS cid,
CASE WHEN TRIM(cntry) = 'DE' THEN 'Germany'
    WHEN TRIM(cntry) = 'USA' THEN 'United States'
	WHEN TRIM(cntry) = 'US' THEN 'United States'
	 WHEN TRIM(cntry) IS NULL THEN 'n/a'
	WHEN TRIM(cntry) = '' THEN 'n/a'
	 ELSE TRIM(cntry)
	 END cntry
FROM [Bronze].[erp_loc_a101]

--Load cleaned data into the silver.erp_loc_a101 table

TRUNCATE TABLE silver.erp_loc_a101;
INSERT INTO silver.erp_loc_a101 
(
 cid,
 cntry
)
SELECT 
REPLACE(cid, '-', '') AS cid,
CASE WHEN TRIM(cntry) = 'DE' THEN 'Germany'
    WHEN TRIM(cntry) = 'USA' THEN 'United States'
	WHEN TRIM(cntry) = 'US' THEN 'United States'
	 WHEN TRIM(cntry) IS NULL THEN 'n/a'
	WHEN TRIM(cntry) = '' THEN 'n/a'
	 ELSE TRIM(cntry)
	 END cntry
FROM [Bronze].[erp_loc_a101]



----Clean & Load data from the Bronze.erp_px_cat_g1v2 to silver.erp_px_cat_g1v2

SELECT 
id,
cat,
subcat,
maintenance 
FROM [Bronze].[erp_px_cat_g1v2]


--Check for unwanted spaces
SELECT * 
FROM [Bronze].[erp_px_cat_g1v2]
WHERE cat != TRIM(cat) OR subcat != TRIM(subcat) OR maintenance != TRIM(maintenance)

--Check for data standardization & consistency
SELECT DISTINCT cat 
FROM [Bronze].[erp_px_cat_g1v2]

SELECT DISTINCT subcat 
FROM [Bronze].[erp_px_cat_g1v2]

SELECT DISTINCT maintenance 
FROM [Bronze].[erp_px_cat_g1v2]

--Load data into the silver.erp_px_cat_g1v2 table

TRUNCATE TABLE silver.erp_px_cat_g1v2;
INSERT INTO silver.erp_px_cat_g1v2 
(
 id,
 cat,
 subcat,
 maintenance
)
SELECT 
id,
cat,
subcat,
maintenance 
FROM [Bronze].[erp_px_cat_g1v2]

